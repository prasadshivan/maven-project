pipeline {
    agent any
    tools{
    maven 'maven 3.6.0'        
    }
    stages{
        stage ('Build'){
            steps{
                sh echo "PATH = ${PATH}"
                sh echo "M2_HOME = ${M2_HOME}"
                sh 'mvn clean package'
                sh "docker build . -t tomcatwebapp:${env.BUILD_ID}"
            }
        }
    }
}
